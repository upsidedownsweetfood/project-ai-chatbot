    "version": "0.2.0",
    "configurations": [
        
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'project-fra'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=project-fra",
                    "--package=project-fra"
                ],
                "filter": {
                    "name": "project-fra",
                    "kind": "bin"
                }
            },
            "env": {
                "OLLAMA_API": "http://127.0.0.1:11434",
                "OLLAMA_MODEL": "mistral:7b"
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'project-fra'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=project-fra",
                    "--package=project-fra"
                ],
                "filter": {
                    "name": "project-fra",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}